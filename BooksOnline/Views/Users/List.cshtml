@model IEnumerable<BooksOnline.Models.User>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Layout_Foundation.cshtml";
}

<body>
    <div class="row column">
        <div class="container">
            <div class="form-header" style=" margin: 30px auto 0px auto">
                <h2>User List</h2>
            </div>
            <table class="table" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Users", new { id = item.id }, null) |
                            @Html.ActionLink("Details", "Details", "Users", new { id = item.id }, null) |
                            @Html.ActionLink("Delete", "Delete", "Users", new { id = item.id }, null)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <button class="btnSubmit">@Html.ActionLink("Create New", "Create", "Users")</button>
        </div>
    </div>
</body>


