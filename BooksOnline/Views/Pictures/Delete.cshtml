@model BooksOnline.Models.Picture

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout_Foundation.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body>
        <div class="row column">
            <div class="container">
                <div class="form-header">
                    <h2>Are you sure you want to delete the picture for <b>@Html.DisplayFor(model => model.title)</b>? </h2>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <table class="table" style="width:100%;">
                    <tbody>
                        <tr>
                            <td style="text-align:center;">
                                @Html.DisplayNameFor(model => model.title)
                            </td>
                            <td style="text-align:left">
                                @Html.DisplayFor(model => model.title)
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:center">
                                @Html.DisplayNameFor(model => model.page)
                            </td>
                            <td style="text-align:left">
                                @Html.DisplayFor(model => model.page)
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align:center">
                                @Html.DisplayNameFor(model => model.path)
                            </td>
                            <td style="text-align:left">
                                @Html.DisplayFor(model => model.path)
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="row form-actions no-color" style="margin: 20px auto">
                    <input type="submit" value="Delete" class="btnSubmit" />
                </div>
                <div>
                    @Html.ActionLink("Back to Picture List", "Index")
                </div>
            </div>
        </div>
    </body>
}



